<launch>

  <node type="capture_exec.py"
        pkg="calibration_launch"
        name="calibration_exec"
        args="$(find jsk_calibration)/staro_calibration/capture_data/samples/ $(find jsk_calibration)/staro_calibration/capture_data/hardware_config $(find jsk_calibration)/staro_calibration/estimate_params/config/system.yaml"
        output="screen" >
    <remap from="head_camera/camera_info" to="/multisense/left/image_rect/camera_info"/>
    <remap from="head_camera/image_rect"  to="/multisense/left/image_rect_throttle"/>
    <remap from="head_camera/image"       to="/multisense/left/image_rect_throttle"/>
    <remap from="head_camera/features"    to="/multisense/left/features"/>
  </node>

  <node type="urdf_pub.py" pkg="calibration_launch" name="urdf_pub"/>

  <node type="record" pkg="rosbag" name="robot_measurement_recorder" output="screen"
        args="-O /tmp/staro_calibration/cal_measurements robot_measurement robot_description" >
    <!-- Hack to create the directory -->
    <param name="mkdir_tmp" command="mkdir -m 777 -p /tmp/staro_calibration" />
  </node>

</launch>
